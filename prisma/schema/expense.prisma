model Expense {
  id          String           @id @default(uuid())
  planId      String           @map("plan_id")
  payerId     String           @map("payer_id")
  amount      Float
  currency    String           @default("USD")
  category    ExpenseCategory
  description String?
  expenseDate DateTime         @map("expense_date")
  splitType   ExpenseSplitType @map("split_type")
  locationId  String?          @map("location_id")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  // Relations
  plan        TravelPlan        @relation(fields: [planId], references: [id], onDelete: Cascade)
  payer       User              @relation("ExpensePayer", fields: [payerId], references: [id])
  locationRel Location?         @relation(fields: [locationId], references: [id])
  participants ExpenseParticipant[]

  @@index([planId, expenseDate])
  @@index([payerId])
  @@index([category])
  @@map("expenses")
}

